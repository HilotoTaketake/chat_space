.main-chat__message-list__js{data: {message: {id: message.id}}}
  .what-who-when
    .what-who-when__sender
      = message.user.name
    .what-who-when__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .what-message
    - if message.content.present?
      .what-message__text
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?
